---
// src/components/Projects.astro
// Grid de proyectos con efecto "iceberg" que revela información al hover

interface Project {
  title: string;
  description: string;
  image: string;
  technologies: string[];
  category: string;
  demoUrl?: string;
  githubUrl?: string;
  featured?: boolean;
}

interface Props {
  projects: Project[];
}

const { 
  projects = [
    {
      title: "E-Commerce Platform",
      description: "Plataforma completa de comercio electrónico con gestión de inventario, pagos integrados y panel de administración. Arquitectura de microservicios escalable.",
      image: "/images/projects/ecommerce.jpg",
      technologies: ["Spring Boot", "Angular", "PostgreSQL", "Redis", "Docker"],
      category: "Full Stack",
      demoUrl: "https://demo.example.com",
      githubUrl: "https://github.com/user/ecommerce",
      featured: true
    },
    {
      title: "Task Management System",
      description: "Sistema de gestión de tareas empresarial con colaboración en tiempo real, notificaciones y reportes avanzados.",
      image: "/images/projects/taskmanager.jpg",
      technologies: ["Spring Boot", "Angular", "MongoDB", "WebSocket"],
      category: "Full Stack",
      demoUrl: "https://demo.example.com",
      featured: true
    },
    {
      title: "API Gateway Service",
      description: "Gateway centralizado para microservicios con autenticación JWT, rate limiting y balanceo de carga.",
      image: "/images/projects/gateway.jpg",
      technologies: ["Spring Cloud", "Java", "Redis", "Kubernetes"],
      category: "Backend",
      githubUrl: "https://github.com/user/gateway"
    },
    {
      title: "Analytics Dashboard",
      description: "Dashboard interactivo para visualización de métricas empresariales en tiempo real con gráficos dinámicos.",
      image: "/images/projects/dashboard.jpg",
      technologies: ["Angular", "TypeScript", "Chart.js", "RxJS"],
      category: "Frontend",
      demoUrl: "https://demo.example.com"
    },
    {
      title: "Booking System",
      description: "Sistema de reservas con calendario interactivo, notificaciones por email y gestión de disponibilidad.",
      image: "/images/projects/booking.jpg",
      technologies: ["Spring Boot", "Angular", "MySQL", "Stripe"],
      category: "Full Stack",
      githubUrl: "https://github.com/user/booking"
    },
    {
      title: "Chat Application",
      description: "Aplicación de mensajería en tiempo real con salas de chat, compartir archivos y videollamadas.",
      image: "/images/projects/chat.jpg",
      technologies: ["Spring Boot", "WebSocket", "Angular", "MongoDB"],
      category: "Full Stack",
      demoUrl: "https://demo.example.com"
    }
  ]
} = Astro.props;

// Separar proyectos destacados y regulares
const featuredProjects = projects.filter(p => p.featured);
const regularProjects = projects.filter(p => !p.featured);
---

<section id="projects" class="relative py-20 lg:py-32 overflow-hidden bg-winter-darker/30">
  <!-- Decoración de fondo -->
  <div class="absolute top-0 right-1/4 w-96 h-96 bg-aurora-cyan/5 rounded-full blur-3xl"></div>
  
  <div class="container mx-auto px-6 lg:px-20 relative z-10">
    <!-- Título de sección -->
    <div class="text-center mb-16 reveal">
      <span class="text-aurora-cyan text-sm font-semibold tracking-wider uppercase">
        Portfolio
      </span>
      <h2 class="text-4xl md:text-5xl font-bold mt-2 mb-4">
        <span class="text-glow">Proyectos Destacados</span>
      </h2>
      <div class="w-20 h-1 bg-gradient-to-r from-aurora-blue to-aurora-cyan mx-auto rounded-full"></div>
      <p class="text-winter-frost/70 mt-4 max-w-2xl mx-auto">
        Una selección de proyectos que demuestran mis habilidades y experiencia
      </p>
    </div>
    
    <!-- Proyectos destacados (más grandes) -->
    {featuredProjects.length > 0 && (
      <div class="mb-16">
        <div class="grid md:grid-cols-2 gap-8 max-w-6xl mx-auto">
          {featuredProjects.map((project, index) => (
            <div 
              class="project-card featured-project reveal"
              style={`animation-delay: ${index * 0.1}s`}
            >
              <div class="relative group rounded-2xl overflow-hidden frost-border h-full">
                <!-- Imagen de fondo -->
                <div class="absolute inset-0">
                  <img 
                    src={project.image} 
                    alt={project.title}
                    class="w-full h-full object-cover group-hover:scale-110 transition-transform duration-700"
                    loading="lazy"
                    onerror="this.src='https://via.placeholder.com/800x600/1E3A5F/64B5F6?text=Project+Image'"
                  />
                  <!-- Overlay gradient -->
                  <div class="absolute inset-0 bg-gradient-to-t from-winter-dark via-winter-dark/80 to-transparent"></div>
                </div>
                
                <!-- Contenido (visible siempre en mobile, hover en desktop) -->
                <div class="relative h-full flex flex-col justify-end p-6 md:p-8">
                  <!-- Badge de categoría -->
                  <div class="absolute top-6 right-6">
                    <span class="glass-effect px-3 py-1 rounded-full text-xs font-semibold 
                                 text-aurora-cyan border border-aurora-blue/30">
                      ⭐ Destacado
                    </span>
                  </div>
                  
                  <!-- Info básica (siempre visible) -->
                  <div class="space-y-4">
                    <div>
                      <span class="text-aurora-cyan text-sm font-semibold">
                        {project.category}
                      </span>
                      <h3 class="text-2xl md:text-3xl font-bold text-winter-light mt-1">
                        {project.title}
                      </h3>
                    </div>
                    
                    <!-- Descripción (se expande en hover en desktop) -->
                    <p class="text-winter-frost/90 leading-relaxed 
                              md:max-h-0 md:opacity-0 md:group-hover:max-h-40 md:group-hover:opacity-100 
                              transition-all duration-500 overflow-hidden">
                      {project.description}
                    </p>
                    
                    <!-- Tecnologías -->
                    <div class="flex flex-wrap gap-2">
                      {project.technologies.map((tech) => (
                        <span class="px-3 py-1 bg-winter-mid/50 rounded-full text-xs font-medium 
                                     text-winter-light border border-aurora-blue/20">
                          {tech}
                        </span>
                      ))}
                    </div>
                    
                    <!-- Enlaces -->
                    <div class="flex gap-3 pt-2">
                      {project.demoUrl && (
                        <a 
                          href={project.demoUrl} 
                          target="_blank" 
                          rel="noopener noreferrer"
                          class="flex-1 btn-winter text-center text-sm py-2"
                        >
                          Ver Demo
                        </a>
                      )}
                      {project.githubUrl && (
                        <a 
                          href={project.githubUrl} 
                          target="_blank" 
                          rel="noopener noreferrer"
                          class="flex-1 btn-outline text-center text-sm py-2"
                        >
                          Código
                        </a>
                      )}
                    </div>
                  </div>
                </div>
              </div>
            </div>
          ))}
        </div>
      </div>
    )}
    
    <!-- Grid de proyectos regulares -->
    {regularProjects.length > 0 && (
      <div>
        <h3 class="text-2xl font-bold text-winter-light mb-8 text-center reveal">
          Más Proyectos
        </h3>
        <div class="grid sm:grid-cols-2 lg:grid-cols-3 gap-6 max-w-7xl mx-auto">
          {regularProjects.map((project, index) => (
            <div 
              class="project-card reveal"
              style={`animation-delay: ${(featuredProjects.length * 0.1) + (index * 0.1)}s`}
            >
              <div class="glass-effect rounded-xl overflow-hidden frost-border h-full 
                          hover:scale-[1.03] transition-all duration-500 group">
                <!-- Imagen -->
                <div class="relative h-48 overflow-hidden">
                  <img 
                    src={project.image} 
                    alt={project.title}
                    class="w-full h-full object-cover group-hover:scale-110 transition-transform duration-700"
                    loading="lazy"
                    onerror="this.src='https://via.placeholder.com/600x400/1E3A5F/64B5F6?text=Project'"
                  />
                  <div class="absolute inset-0 bg-gradient-to-t from-winter-dark/80 to-transparent"></div>
                  
                  <!-- Badge flotante -->
                  <span class="absolute top-4 right-4 glass-effect px-2 py-1 rounded-full 
                               text-xs font-semibold text-aurora-cyan border border-aurora-blue/30">
                    {project.category}
                  </span>
                </div>
                
                <!-- Contenido -->
                <div class="p-5 space-y-4">
                  <div>
                    <h3 class="text-xl font-bold text-winter-light mb-2 group-hover:text-aurora-cyan 
                               transition-colors">
                      {project.title}
                    </h3>
                    <p class="text-sm text-winter-frost/80 line-clamp-2">
                      {project.description}
                    </p>
                  </div>
                  
                  <!-- Tecnologías -->
                  <div class="flex flex-wrap gap-2">
                    {project.technologies.slice(0, 3).map((tech) => (
                      <span class="px-2 py-1 bg-winter-mid/30 rounded text-xs text-winter-frost/90">
                        {tech}
                      </span>
                    ))}
                    {project.technologies.length > 3 && (
                      <span class="px-2 py-1 text-xs text-winter-frost/70">
                        +{project.technologies.length - 3}
                      </span>
                    )}
                  </div>
                  
                  <!-- Enlaces -->
                  <div class="flex gap-2 pt-2">
                    {project.demoUrl && (
                      <a 
                        href={project.demoUrl} 
                        target="_blank" 
                        rel="noopener noreferrer"
                        class="flex-1 text-center px-3 py-2 bg-aurora-blue/20 hover:bg-aurora-blue/30 
                               text-aurora-cyan rounded-lg text-sm font-medium transition-colors"
                      >
                        Demo
                      </a>
                    )}
                    {project.githubUrl && (
                      <a 
                        href={project.githubUrl} 
                        target="_blank" 
                        rel="noopener noreferrer"
                        class="flex-1 text-center px-3 py-2 bg-winter-mid/30 hover:bg-winter-mid/50 
                               text-winter-light rounded-lg text-sm font-medium transition-colors"
                      >
                        Código
                      </a>
                    )}
                  </div>
                </div>
              </div>
            </div>
          ))}
        </div>
      </div>
    )}
    
    <!-- CTA -->
    <div class="text-center mt-16 reveal" style="animation-delay: 1s">
      <p class="text-winter-frost/70 mb-6">
        ¿Quieres ver más proyectos o trabajar juntos?
      </p>
      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <a href="https://github.com/tuusuario" target="_blank" class="btn-winter">
          Ver todos en GitHub
        </a>
        <a href="#contact" class="btn-outline">
          Iniciar un proyecto
        </a>
      </div>
    </div>
  </div>
</section>

<style>
  /* Efecto iceberg - Se derrite y revela contenido */
  .project-card {
    opacity: 0;
    transform: translateY(30px);
    transition: all 0.6s ease;
  }
  
  .project-card.active {
    opacity: 1;
    transform: translateY(0);
  }
  
  /* Efecto de brillo que recorre la card */
  .featured-project::before {
    content: '';
    position: absolute;
    top: 0;
    left: -100%;
    width: 50%;
    height: 100%;
    background: linear-gradient(90deg, transparent, rgba(100, 181, 246, 0.2), transparent);
    transition: left 0.7s ease;
    z-index: 1;
    pointer-events: none;
  }
  
  .featured-project:hover::before {
    left: 100%;
  }
  
  /* Limitar líneas de texto */
  .line-clamp-2 {
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
</style>
<script>
  // Manejo del formulario con validaci√≥n y animaciones
  const form = document.getElementById('contact-form') as HTMLFormElement;
  const formStatus = document.getElementById('form-status') as HTMLDivElement;
  
  if (form) {
    form.addEventListener('submit', async (e) => {
      e.preventDefault();
      
      // Obtener datos del formulario
      const formData = new FormData(form);
      const data = Object.fromEntries(formData);
      
      // Mostrar estado de carga
      showStatus('Enviando mensaje...', 'loading');
      
      // Simular env√≠o (aqu√≠ deber√≠as integrar tu backend o servicio de email)
      try {
        // Aqu√≠ va tu l√≥gica de env√≠o real
        // Por ejemplo: await fetch('/api/contact', { method: 'POST', body: JSON.stringify(data) })
        
        await new Promise(resolve => setTimeout(resolve, 1500)); // Simulaci√≥n
        
        showStatus('¬°Mensaje enviado con √©xito! Te responder√© pronto üéâ', 'success');
        form.reset();
        
        // Ocultar mensaje despu√©s de 5 segundos
        setTimeout(() => {
          formStatus.classList.add('hidden');
        }, 5000);
        
      } catch (error) {
        showStatus('Error al enviar el mensaje. Por favor, intenta de nuevo.', 'error');
      }
    });
  }
  
  function showStatus(message: string, type: 'loading' | 'success' | 'error') {
    formStatus.textContent = message;
    formStatus.classList.remove('hidden', 'text-aurora-cyan', 'text-green-400', 'text-red-400');
    
    if (type === 'loading') {
      formStatus.classList.add('text-aurora-cyan');
    } else if (type === 'success') {
      formStatus.classList.add('text-green-400');
    } else {
      formStatus.classList.add('text-red-400');
    }
  }
  
  // Efecto de escarcha en los inputs al focus
  const inputs = document.querySelectorAll('input, textarea');
  inputs.forEach(input => {
    input.addEventListener('focus', function(this: HTMLInputElement) {
      this.parentElement?.classList.add('form-group-focus');
    });
    
    input.addEventListener('blur', function(this: HTMLInputElement) {
      this.parentElement?.classList.remove('form-group-focus');
    });
  });
</script>

<style>
  /* Efecto de escarcha en focus */
  .form-group-focus {
    animation: frost-glow 0.5s ease-out;
  }
  
  @keyframes frost-glow {
    0% {
      filter: drop-shadow(0 0 0 rgba(100, 181, 246, 0));
    }
    50% {
      filter: drop-shadow(0 0 10px rgba(100, 181, 246, 0.5));
    }
    100% {
      filter: drop-shadow(0 0 5px rgba(100, 181, 246, 0.2));
    }
  }
  
  /* Placeholder styling */
  input::placeholder,
  textarea::placeholder {
    transition: opacity 0.3s ease;
  }
  
  input:focus::placeholder,
  textarea:focus::placeholder {
    opacity: 0.5;
  }
</style>
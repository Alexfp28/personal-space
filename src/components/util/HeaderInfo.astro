---
interface Props {
  title: string;
  subtitle: string;
  description?: string;
}

const {
  title = "",
  subtitle = "",
  description = "",
} = Astro.props;
---

<section id="header" class="grid grid-cols-3 items-center reveal">
  <!-- Header de la secciÃ³n -->
  <div class="text-center mb-20 reveal col-start-2">
    <span class="uppercase text-aurora-cyan font-semibold text-xl">
      {title}
    </span>
    <h2 class="text-4xl md:text-5xl lg:text-6xl font-bold mb-6">
      <span
        class="text-glow bg-linear-to-r from-winter-light via-aurora-cyan to-winter-light bg-clip-text text-transparent"
      >
        {subtitle}
      </span>
    </h2>
    <div class="flex items-center justify-center gap-2 mb-6">
      <div class="h-px w-16 bg-linear-to-r from-transparent to-aurora-blue">
      </div>
      <div class="w-2 h-2 rounded-full bg-aurora-cyan animate-pulse"></div>
      <div class="h-px w-16 bg-linear-to-l from-transparent to-aurora-blue">
      </div>
    </div>
    <p class="text-winter-frost/80 text-lg max-w-2xl mx-auto">
      {description}
    </p>
  </div>
</section>

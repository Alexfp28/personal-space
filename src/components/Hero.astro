</article>

<style>
  @reference "../styles/app.css";

  /* Aurora más intensa para el hero */
  .aurora-hero {
    /* ... (Estilos CSS específicos del hero) ... */
    background: linear-gradient(
      135deg,
      var(--color-winter-dark) 0%,
      var(--color-aurora-purple) 20%,
      var(--color-winter-blue) 40%,
      var(--color-aurora-cyan) 60%,
      var(--color-winter-mid) 80%,
      var(--color-winter-dark) 100%
    );
    background-size: 400% 400%;
    animation: aurora-intense 15s ease infinite;
    opacity: 0.5;
  }

  @keyframes aurora-intense {
    0%,
    100% {
      background-position: 0% 50%;
    }
    25% {
      background-position: 100% 50%;
    }
    50% {
      background-position: 50% 100%;
    }
    75% {
      background-position: 50% 0%;
    }
  }

  /* Texto con efecto glass */
  .glass-hero-text {
    /* ... (Estilos CSS específicos del hero) ... */
    background: linear-gradient(
      135deg,
      var(--color-winter-snow) 0%,
      var(--color-aurora-cyan) 50%,
      var(--color-winter-snow) 100%
    );
    background-size: 200% 200%;
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    animation: shimmer 3s ease-in-out infinite;
  }

  @keyframes shimmer {
    0%,
    100% {
      background-position: 0% 50%;
    }
    50% {
      background-position: 100% 50%;
    }
  }

  /* Animación de partículas flotantes */
  @keyframes float {
    0%,
    100% {
      transform: translateY(0) translateX(0);
      opacity: 0.3;
    }
    25% {
      transform: translateY(-20px) translateX(10px);
      opacity: 0.6;
    }
    50% {
      transform: translateY(-40px) translateX(-10px);
      opacity: 0.8;
    }
    75% {
      transform: translateY(-20px) translateX(5px);
      opacity: 0.6;
    }
  }

  .particle {
    filter: blur(1px);
  }
</style>
